<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", oninput: "countChars()", maxlength: "140" %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
  <p id="micropost_content_char_count"></p>
<% end %>